@model CapstoneV2.Models.Data.BlogEntry
@{
    ViewBag.Title = "Entry Detail";
}

<div class="panel">
    <div class="panel-heading">
        <h3>@ViewBag.Title</h3>
    </div>
    <div class="panel-body">
        @using (@Html.BeginForm("ApproveBlogEntry", "Admin", FormMethod.Post))
        {
            <div class="row">
                <div class="panel panel-info">
                    <div class="panel-heading">Review Blog Entry</div>
                    <div class="panel-body">
                        <h3>@Model.Title</h3>
                        <h4>@Model.User.FirstName @Model.User.LastName</h4>
                        <h4>@Model.DatePosted.ToLongDateString()</h4>
                        <div name="blog-body">
                            @Model.Body
                        </div>
                        <br />
                        <button class="btn btn-success">Approve</button>
                        @Html.ActionLink("Deny", "DeleteBlogEntry", "Admin", new { @class = "btn btn-danger" })
                        @Html.ActionLink("Cancel", "ApproveBlogEntries", "Admin", new { @class = "btn btn-warning" })
                    </div>
                </div>
            </div>
        }        
    </div>
</div>

