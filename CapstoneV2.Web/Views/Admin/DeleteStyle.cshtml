@model CapstoneV2.Models.Data.Style
@{
    ViewBag.Title = "Delete " + Model.Name;
}

<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2>@ViewBag.Title</h2>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("DeleteStyle", "Admin", FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.StyleId)
                    <div class="row">
                        <div class="col-xs-12">Are you sure you want to delete @Model.Name?</div>
                    </div>
                    <button class="btn btn-primary">Delete</button>
                    @Html.ActionLink("Cancel", "ManageStyles", "Admin", new { @class = "btn btn-primary" })
                }
            </div>
        </div>
    </div>
</div>

