@model List<CapstoneV2.Models.Data.User>
@{
    ViewBag.Title = "Manage Users";
}

<div class="panel">
    <div class="panel-heading">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="panel-body">
        @Html.ActionLink("Add User", "AddUser", "Admin", new { @class = "btn btn-primary" })
        @Html.ActionLink("Return to Menu", "Index", "Admin", null, new { @class = "btn btn-danger" })

        @if (!Model.Any())
        {
            <p>
                No users yet
            </p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Username</th>
                        <th>Job Title</th>
                        <th>Access Level</th>
                        <th>@* Edit Button *@</th>
                        <th>@* Delete Button *@</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName @user.LastName</td>
                            <td>@user.Username</td>
                            <td>@user.JobTitle</td>
                            <td>@user.AccessLevel</td>
                            <td>@Html.ActionLink("Edit", "EditUser", "Admin", new { id = user.Id }, new { @class = "btn btn-info" })</td>
                            <td>@Html.ActionLink("Delete", "DeleteUser", "Admin", new { id = user.Id }, new { @class = "btn btn-danger" })</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

