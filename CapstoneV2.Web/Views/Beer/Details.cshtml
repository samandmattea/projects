@model CapstoneV2.Models.Data.Beer
@{
    ViewBag.Title = "Details";
    ViewBag.IsOnTap = Model.IsAvailable ? "On Tap" : "Off Tap";

}
<div class="panel-body">
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <h1>@Model.Name (@Model.Style.Name)</h1>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-12">
                        
                    </div>
                    <div class="col-xs-12 col-md-3">
                        @if (!string.IsNullOrEmpty(Model.ImgPath))
                        {
                            <img src=@Url.Content(Model.ImgPath) class="img-thumbnail img-responsive" alt="@Model.Name" style="width: 100%;">
                        }
                    </div>
                    <div class="col-xs-12 col-md-6">
                        <h4><em>@ViewBag.IsOnTap</em></h4>
                        <p><b>ABV:</b> @Model.ABV%</p>
                        @if (Model.IBU != null)
                        {
                            <p><b>IBU:</b> @Model.IBU</p>
                        }
                        
                       <p><b>Untappd Rating:</b> @Model.UntappdRating</p>
                        
                        @*<p>Released: @Model.ReleaseDate.ToShortDateString()</p>*@
                        @*@if (Model.Series != null)
                        {
                            <p>Series: @Model.Series.Name</p>
                        }*@
                        @if (Model.Collaborator != null)
                        {
                            <p><b>Collaborator:</b> @Model.Collaborator.Name</p>
                        }
                        @if (string.IsNullOrEmpty(@Model.Season) == false)
                        {
                            <p><b>Season:</b> @Model.Season</p>
                        }
                        <p><b>Description: </b>@Model.Description</p>
                        @if (@Model.IsFlagship)
                        {
                            <p>This is one of our flagship brews</p>
                        }
                    </div>
                </div>
            </div>            
        </div>
    </div>
</div>



